{% extends 'base.html.twig' %}

{% block titre_page %} <strong class="text-primary">Modifier Produit</strong> {% endblock %}
{% block titre_description %}Modifier information produit{% endblock %}
{% block body %}

    <div class="row">
        <div class="col-md-6">
            <div class="box">

                <div class="box-header with-border">
                    <h3 class="box-title"><i class="fa fa-plus-circle"></i> Formulaire Produit</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    {{ form_start(edit_form) }}
                    {{ form_widget(edit_form) }}

                    <br>
                    <div class="row">
                        <div class="col-md-6">
                            <button type="submit"  class="btn btn-primary btn-block" ><i class="fa fa-save"></i> Enregistrer</button>
                        </div>
                        <div class="col-md-6">
                            <a href="{{ path('produit_index') }}" class="btn btn-default btn-block">Annuler</a>
                        </div>
                    </div>
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </div>

    </div>

    <br><br><br><br><br><br>


    {#NUMERAL FORMAT#}
    <script>
        numeralFormat('#produitbundle_produit_prixAchat');
        numeralFormat('#produitbundle_produit_prixVente');

        $('#produitbundle_produit_prixAchat').addClass('only_float');
        $('#produitbundle_produit_prixVente').addClass('only_float');
    </script>

{% endblock %}
