{% extends 'base.html.twig' %}

{% block titre_page %} <strong class="text-primary">Modification Dépôt</strong> {% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-6">
            <div class="box">

                <div class="box-header with-border">
                    <h3 class="box-title">Formulaire dépôt</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    {{ form_start(edit_form) }}
                    {{ form_widget(edit_form) }}

                    <br>
                    <div class="row">
                        <div class="col-md-6">
                            <input type="submit" value="Modifier" class="btn btn-primary btn-block" />
                        </div>
                        <div class="col-md-6">
                            <a href="{{ path('depot_index') }}" class="btn btn-default btn-block">Annuler</a>
                        </div>
                        <div class="col-md-6">
                            <br>
                            <button type="button" id="btnSupprimerDepot"   class="btn btn-danger btn-block" data-toggle="modal" data-target="#modalSupprimerDepot"><i class="fa fa-warning"></i> Supprimer</button>
                        </div>
                    </div>
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </div>

    </div>

    {#MODALS SUPPRIMER DEPOT#}
    <div class="modal modal-danger fade" id="modalSupprimerDepot">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Vérification</h4>
                </div>
                <div class="modal-body">
                    <p>Attention! Voulez-vous supprimer ce Dépôt?</p>
                </div>
                <div class="modal-footer">
                    <a href="{{ path('depot_delete', {'id' : depot.id}) }}" id="lienSupprimerDepot" class="btn btn-outline"><i class="fa fa-minus-circle"></i> Supprimer</a>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Anuller</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
{% endblock %}
