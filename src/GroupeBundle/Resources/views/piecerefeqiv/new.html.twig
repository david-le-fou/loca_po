{% extends 'base.html.twig' %}

{% block titre_page %} <strong class="text-success">Nouvelle pièce équivalence</strong> {% endblock %}
{% block titre_description %}Création d'une pièce équivalence{% endblock %}
{% block body %}
<div class="row">
    <div class="col-md-6">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title"><i class="fa fa-plus-circle"></i>Référence  équivalence</h3>
            </div>
            <div class="box-body">
                <form action="#" method="post">
                <div class="row">
                    <div class="col-md-12">

                        <div class="form-group">

                                <label for="piece">Pièce <b class="text-danger" id="err_piece"></b></label>
                                <select required  class="form-control" name="piece" id="piece" >
                                    {% for key, listepiece in listepieces %}
                                        <option value="{{ listepiece.id }}" {% if key == 0 %}selected {% endif %}>{{ listepiece.nom }}</option>
                                    {% endfor %}
                                </select>


                        </div>
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <br>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">

                        <input type="submit" value="Créer" class="btn btn-success btn-block" />
                        {{ form_end(form) }}
                    </div>
                    <div class="col-md-6">
                        <a href="{{ path('listepiece_index') }}" class="btn btn-default btn-block">Annuler</a>
                    </div>
                </div>
                </form>
            </div>



        </div>
    </div>
</div>
    <script>
        $(document).ready(function() {
            $('#piece').select2();
        });
    </script>
{% endblock %}
