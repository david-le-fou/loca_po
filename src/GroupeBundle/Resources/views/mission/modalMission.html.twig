<div class="modal fade" id="modalMission">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="{{ path('mission_newProbleme', {"id" : probleme.id}) }}" method="post" autocomplete="off">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title text-primary"><i class="fa fa-plus"></i> Mission de solution du problème</h4>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label for="dateDebutMission">Date de début: <b class="text-danger" id="err_dateDebutMission"></b></label>
                        <input required type="text" class="form-control" name="dateDebutMission" id="dateDebutMission"  />
                    </div>

                    <div class="form-group">
                        <label for="dateFinMission">Date fin: <b class="text-danger" id="err_dateFinMission"></b></label>
                        <input required type="text" class="form-control" name="dateFinMission" id="dateFinMission"  />
                    </div>

                    <div class="form-group">
                        <label for="descriptionMission">Description: <b class="text-danger" id="err_descriptionMission"></b></label>
                        <textarea rows="3" class="form-control" name="descriptionMission" id="descriptionMission"></textarea>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" > Confirmer</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Anuller</button>
                </div>
            </form>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<script>
    //Date picker
    $('#dateDebutMission').datepicker({
        autoclose: true,
        format: 'dd/mm/yyyy',
    });
</script>

<script>
    //Date picker
    $('#dateFinMission').datepicker({
        autoclose: true,
        format: 'dd/mm/yyyy',
    });
</script>
