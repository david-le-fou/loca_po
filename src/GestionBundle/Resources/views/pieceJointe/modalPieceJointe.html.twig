<div class="modal fade" id="modalPieceJointe">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="{{ path('pjGestion_ajouter') }}" method="post" autocomplete="off" enctype="multipart/form-data">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title text-primary"><i class="fa fa-file"></i> Ajouter Fichier</h4>
                </div>
                <div class="modal-body">
                   <div class="form-group">
                       <label for="pjGestion_libelle">Libell√©: <b class="text-danger" id="err_pjGestion_libelle"></b></label>
                       <input required type="text" class="form-control" name="pjGestion_libelle" id="pjGestion_libelle"  />
                   </div>

                    <div class="form-group">
                        <label for="pjGestion_fichier">Fichier: <b class="text-danger" id="err_pjGestion_fichier"></b></label>
                        <input required type="file" class="form-control" name="pjGestion_fichier" id="pjGestion_fichier"  />
                    </div>

                    <input type="hidden" name="typeDoc" value="{{ typeDoc }}">
                    <input type="hidden" name="idDoc" value="{{ idDoc }}">
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" > <i class="fa fa-save"></i> Enregistrer</button>
